@model ECommerceApp.Models.Product


<style>
    h4 {
        margin-bottom:60px;
    }
    body {
        text-align:center;
    }

    label {
        font-weight:bold;
    }

</style>


<partial name="_NavPartial"/>

<h4>Please use the form below to add a new product.</h4>


<form class="ProductForm" asp-action="CreateProduct" asp-controller="Home" method="POST">
    <div class="form-group">
    <span asp-validation-for="ProductName"></span>
    <label asp-for="ProductName">Product Name</label><br>
    <input asp-for="ProductName"><br>
    </div>

    <div class="form-group">
    <span asp-validation-for="ProductDescription"></span>
    <label asp-for="ProductDescription">Description</label><br>
    <textarea asp-for="ProductDescription"></textarea><br>
    </div>

    <div class="form-group">
    <span asp-validation-for="InitialQuantity"></span>
    <label asp-for="InitialQuantity">Quantity</label><br>
    <input asp-for="InitialQuantity"><br>
    </div>
    
    <div class="form-group">
    <span asp-validation-for="Price"></span>
    <label asp-for="Price">Price</label><br>
    <input asp-for="Price"><br>
    </div>

    <div class="form-group">
    <span asp-validation-for=ImageUrl></span>
    <label asp-for="ImageUrl">ImageUrl</label><br>
    <input asp-for="ImageUrl"><br>
    </div>

    <input type="submit" value="Create">
    
</form>
